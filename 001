cd C:\Users\Korenyk.A\Documents\Prodjects\BudgetMaster\android-app


$env:JAVA_HOME="C:\Users\Korenyk.A\Documents\Prodjects\jdk-17.0.12"
$env:PATH="$env:JAVA_HOME\bin;$env:PATH"

./gradlew clean
./gradlew assembleRelease
./gradlew assembleDebug
./gradlew clean assembleRelease
./gradlew clean assembleDebug

./gradlew clean assembleDebug installDebug
./gradlew installDebug

cd C:\Users\Korenyk.A\Documents\Prodjects\android-sdk\platform-tools
./adb devices
./adb kill-server
./adb start-server
./adb uninstall com.sadengineer.budgetmaster

# Все логи
./adb logcat
./adb logcat | coloredlogcat

# Фильтрация по приложению
./adb logcat | Select-String "BudgetMaster"
./adb logcat | Select-String "com.sadengineer.budgetmaster"

# Только ошибки
./adb logcat *:E

# Сохранение логов в файл
./adb logcat > C:\logs.txt

# Фильтрация и сохранение
./adb logcat | Select-String "BudgetMaster" > C:\budgetmaster_logs.txt
./adb logcat -v time | Out-File -FilePath "C:\Users\Korenyk.A\Documents\Prodjects\BudgetMaster\budgetmaster_logs.log" -Encoding UTF8

./adb logcat -v time | iconv -f UTF-8 -t UTF-8 > "C:\Users\Korenyk.A\Documents\Prodjects\BudgetMaster\budgetmaster_logs.log"

через  cmd
cmd /c "chcp 65001 && adb logcat -v time > C:\Users\Korenyk.A\Documents\Prodjects\BudgetMaster\budgetmaster_logs.log"

# поиск базы для анализа
# Найти имя пакета
./adb shell pm list packages | Select-String "budget"
какие файлы базы данных есть
./adb shell run-as com.sadengineer.budgetmaster ls databases/
копируем основной файл базы данных
./adb shell "run-as com.sadengineer.budgetmaster cp databases/budget_master_database /sdcard/"
./adb pull /sdcard/budget_master_database C:\Users\Korenyk.A\Documents\Prodjects\BudgetMaster\budget_master_database.db
./adb shell "run-as com.sadengineer.budgetmaster cp databases/budget_master_database /sdcard/budget_master_database_room.db"
./adb pull /sdcard/budget_master_database_room.db C:\Users\Korenyk.A\Documents\Prodjects\BudgetMaster\budget_master_database_room.db
