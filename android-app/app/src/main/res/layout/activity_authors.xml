<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout 
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AuthorsActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <!-- Тулбар -->
        <androidx.appcompat.widget.Toolbar 
            android:background="@color/toolbar_background"
            android:id="@+id/toolbar"
            android:layout_height="@dimen/toolbar_height"
            android:layout_marginTop="@dimen/toolbar_margin_top"
            android:layout_width="match_parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:title="">

            <include layout="@layout/toolbar_content_common" />

        </androidx.appcompat.widget.Toolbar>

        <!-- Контент -->
        <FrameLayout 
            android:background="@color/content_background"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <ScrollView
                android:id="@+id/authors_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/authors_content_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <!-- Информация об авторах -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/authors_info_title"
                        android:textColor="@color/content_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- Описание -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/authors_info_description"
                        android:textColor="@color/content_texts"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Copyright информация -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/authors_copyright_text"
                        android:textColor="@color/content_texts"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp" />

                    <!-- Разделитель -->
                    <View
                        android:id="@+id/divider_1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="16dp"
                        android:background="@color/content_divider" />

                    <!-- Информация о библиотеках -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Заголовок библиотек -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/authors_libraries_title"
                            android:textColor="@color/content_title"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <!-- Список библиотек -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/authors_libraries_list"
                            android:textColor="@color/content_texts"
                            android:textSize="14sp"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </FrameLayout>

    </LinearLayout>

    <!-- Боковое меню -->
    <com.google.android.material.navigation.NavigationView 
        android:background="@color/content_background"
        android:id="@+id/nav_view"
        android:layout_height="match_parent"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_drawer_header"
        app:menu="@menu/nav_drawer_menu"
        app:itemTextColor="@color/content_texts"
        app:itemIconTint="@color/content_icons" />

</androidx.drawerlayout.widget.DrawerLayout> 