<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:orientation="vertical"
    android:gravity="end"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <!-- Пропорция кнопок была выбрана по правилу "Золотого сечения" -->
    <!-- Кнопка удаления (меньше) -->
    <ImageButton
        android:id="@+id/delete_button_bottom"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_background"
        android:contentDescription="@string/icon_delete"
        android:src="@drawable/ic_delete"
        app:tint="@color/delete_button_icon" />

    <!-- Кнопка создания (больше) -->
    <ImageButton
        android:id="@+id/add_button_bottom"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:background="@drawable/button_background"
        android:contentDescription="@string/icon_add"
        android:src="@drawable/ic_add"
        app:tint="@color/add_button_icon" />

</LinearLayout>
