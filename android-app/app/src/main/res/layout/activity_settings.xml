<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout 
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".settings.SettingsActivity">

    <LinearLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".settings.SettingsActivity">

        <!-- Тулбар -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:layout_marginTop="@dimen/toolbar_margin_top"
            android:background="@color/toolbar_background"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:title="">

            <include layout="@layout/toolbar_content_common" />

        </androidx.appcompat.widget.Toolbar>

        <!-- Контент -->
        <ScrollView
            android:id="@+id/settings_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/content_background"
            android:padding="16dp">

            <!-- Контент -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/content_background">

                <!-- Заголовок раздела отображения -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_display_options"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/item_title"
                    android:layout_marginBottom="16dp"
                    android:padding="8dp" />

                <!-- Чекбокс для отображения позиции в списке -->
                <LinearLayout
                    android:id="@+id/checkbox_show_position_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical">

                    <!-- Иконка -->
                    <ImageView
                        android:id="@+id/checkbox_show_position_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_checkbox_unchecked"
                        android:layout_marginEnd="12dp" />

                    <!-- Текст -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_show_position"
                        android:textSize="16sp"
                        android:textColor="@color/content_texts" />

                </LinearLayout>

                <!-- Чекбокс для отображения ID в списке -->
                <LinearLayout
                    android:id="@+id/checkbox_show_id_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical">

                    <!-- Иконка -->
                    <ImageView
                        android:id="@+id/checkbox_show_id_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_checkbox_unchecked"
                        android:layout_marginEnd="12dp" />

                    <!-- Текст -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_show_id"
                        android:textSize="16sp"
                        android:textColor="@color/content_texts" />

                </LinearLayout>

                <!-- Разделитель между разделами -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/content_texts"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.3" />

                <!-- Заголовок раздела валюты -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_currency_options"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/content_title"
                    android:layout_marginBottom="16dp"
                    android:padding="8dp" />

                <!-- Поле выбора валюты по умолчанию -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@color/content_background">

                    <!-- Название поля выбора валюты по умолчанию -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_default_currency"
                        android:textSize="16sp"
                        android:textColor="@color/content_texts"
                        android:layout_marginBottom="8dp" />

                    <!-- Поле выбора валюты по умолчанию -->
                    <Spinner
                        android:id="@+id/spinner_default_currency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner_background"
                        android:padding="12dp"
                        android:textSize="16sp"
                        android:popupBackground="@color/content_background" />

                </LinearLayout>

                <!-- Разделитель между разделами -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/content_divider"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:alpha="0.3" />

                <!-- Заголовок раздела информации о backend -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_backend_info"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/content_texts"
                    android:layout_marginBottom="8dp"
                    android:padding="8dp" />

                <!-- Поле информации о backend -->
                <TextView
                    android:id="@+id/info_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:textColor="@color/content_texts"
                    android:background="@color/content_background"
                    android:padding="8dp"
                    android:scrollbars="vertical"
                    android:fadeScrollbars="false"
                    tools:text="Информация о backend.jar будет здесь..." />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Боковое меню -->
    <com.google.android.material.navigation.NavigationView 
        android:background="@color/content_background"
        android:id="@+id/nav_view"
        android:layout_height="match_parent"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_drawer_header"
        app:menu="@menu/nav_drawer_menu"
        app:itemTextColor="@color/content_texts"
        app:itemIconTint="@color/content_icons" />

</androidx.drawerlayout.widget.DrawerLayout> 