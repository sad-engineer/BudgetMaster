<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/main"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".currencies.CurrenciesActivity">

    <androidx.appcompat.widget.Toolbar android:background="@color/background_toolbar"
        android:id="@+id/toolbar2"
        android:layout_height="@dimen/toolbar_height"
        android:layout_marginTop="@dimen/toolbar_margin_top"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="">

        <LinearLayout android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <ImageButton android:background="@android:color/transparent"
                android:contentDescription="@string/icon_menu"
                android:id="@+id/menu_button"
                android:layout_height="match_parent"
                android:layout_width="@dimen/menu_button_size"
                android:src="@drawable/ic_menu"
                app:tint="@color/currency_toolbar_icon" />

            <TextView android:gravity="center"
                android:id="@+id/toolbar_title"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="@string/toolbar_title_currencies"
                android:textColor="@color/currency_toolbar_text"
                android:textSize="@dimen/toolbar_text"
                android:textStyle="bold" />

            <ImageButton android:background="@android:color/transparent"
                android:contentDescription="@string/icon_income"
                android:id="@+id/income_button"
                android:layout_height="match_parent"
                android:layout_width="@dimen/income_button_size"
                android:src="@drawable/ic_income"
                app:tint="@color/currency_toolbar_icon" />

            <View android:layout_height="match_parent"
                android:layout_width="@dimen/toolbar_gap" />

            <ImageButton android:background="@android:color/transparent"
                android:contentDescription="@string/icon_expense"
                android:id="@+id/expense_button"
                android:layout_height="match_parent"
                android:layout_width="@dimen/expense_button_size"
                android:src="@drawable/ic_expense"
                app:tint="@color/currency_toolbar_icon" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout android:background="@color/background_content"
        android:id="@+id/currencies_content_bg"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar2">

        <!-- Пустое содержимое для валют -->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Кнопка удаления валюты -->
    <ImageButton
        android:id="@+id/delete_currency_button"
        android:layout_width="@dimen/currency_button_size"
        android:layout_height="@dimen/currency_button_size"
        android:layout_marginEnd="@dimen/currency_button_margin"
        android:layout_marginBottom="@dimen/currency_button_margin"
        android:background="@drawable/circle_button_background"
        android:contentDescription="@string/delete_currency"
        android:elevation="@dimen/currency_button_elevation"
        android:src="@drawable/ic_delete"
        android:clipToOutline="true"
        android:theme="@style/CurrencyButton.Delete"
        android:scaleType="fitCenter"
        android:padding="@dimen/currency_button_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/currency_delete_button_icon" />

    <!-- Кнопка добавления валюты -->
    <ImageButton
        android:id="@+id/add_currency_button"
        android:layout_width="@dimen/currency_button_size"
        android:layout_height="@dimen/currency_button_size"
        android:layout_marginEnd="@dimen/currency_button_spacing"
        android:background="@drawable/circle_button_background"
        android:clipToOutline="true"
        android:contentDescription="@string/add_currency"
        android:elevation="@dimen/currency_button_elevation"
        android:src="@drawable/ic_add"
        android:theme="@style/CurrencyButton.Add"
        android:scaleType="fitCenter"
        android:padding="@dimen/currency_button_padding"
        app:layout_constraintBottom_toBottomOf="@id/delete_currency_button"
        app:layout_constraintEnd_toStartOf="@id/delete_currency_button"
        app:layout_constraintTop_toTopOf="@id/delete_currency_button"
        app:tint="@color/currency_add_button_icon" />

</androidx.constraintlayout.widget.ConstraintLayout> 