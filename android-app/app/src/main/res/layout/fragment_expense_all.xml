<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:background="@color/content_background"
    android:id="@+id/expense_all_fragment_container"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Зона настройки месяца -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/date_picker_toolbar_background"
        android:padding="16dp"
        android:layout_marginBottom="8dp">

        <ImageButton
            android:id="@+id/btn_prev_month"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_left"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/btn_prev_month"
            app:tint="@color/date_picker_content_icons" />

        <TextView
            android:id="@+id/tv_month_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/current_month_year"
            android:textColor="@color/date_picker_content_titles"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/btn_next_month"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_right"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/btn_next_month"
            app:tint="@color/date_picker_content_icons" />

    </LinearLayout>

    <!-- Карточка итого -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/item_background"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/total_message"
            android:textColor="@color/item_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:textColor="@color/item_text_negative_operation"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView 
        android:id="@+id/expense_all_recycler"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"/>
</LinearLayout> 