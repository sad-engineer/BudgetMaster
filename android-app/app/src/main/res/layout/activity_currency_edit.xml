<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".currencies.CurrencyEditActivity">

    <LinearLayout 
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/currency_edit_content_background"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:layout_marginTop="@dimen/toolbar_margin_top"
            android:background="@color/toolbar_content_common_background"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:title="">

            <include layout="@layout/toolbar_content_common" />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/currency_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currency_name_label"
                android:textColor="@color/currency_edit_titles"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/currency_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/currency_name_hint"
                android:textColor="@color/currency_edit_input_text"
                android:textColorHint="@color/currency_edit_input_hint"
                android:background="@color/currency_edit_input_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/currency_short_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currency_short_name_label"
                android:textColor="@color/currency_edit_titles"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/currency_short_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/currency_short_name_hint"
                android:textColor="@color/currency_edit_input_text"
                android:textColorHint="@color/currency_edit_input_hint"
                android:background="@color/currency_edit_input_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/exchange_rate_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Обменный курс"
                android:textColor="@color/currency_edit_titles"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/exchange_rate_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Обменный курс"
                android:textColor="@color/currency_edit_input_text"
                android:textColorHint="@color/currency_edit_input_hint"
                android:background="@color/currency_edit_input_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:background="@color/navigation_background"
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_drawer_header"
        app:menu="@menu/nav_drawer_menu" 
        app:itemTextColor="@color/navigation_texts"
        app:itemIconTint="@color/navigation_icons"/>

</androidx.drawerlayout.widget.DrawerLayout> 