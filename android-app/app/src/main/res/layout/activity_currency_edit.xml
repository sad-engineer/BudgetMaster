<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".currencies.CurrencyEditActivity">

    <LinearLayout 
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/content_background"
        android:orientation="vertical">

        <!-- Тулбар -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:layout_marginTop="@dimen/toolbar_margin_top"
            android:background="@color/toolbar_background"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:title="">

            <include layout="@layout/toolbar_content_common" />

        </androidx.appcompat.widget.Toolbar>

        <!-- Контент -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Название валюты -->
            <TextView
                android:id="@+id/currency_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currency_name_label"
                android:textColor="@color/item_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Поле ввода названия валюты -->
            <EditText
                android:id="@+id/currency_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/currency_name_hint"
                android:textColor="@color/item_text"
                android:textColorHint="@color/item_hint"
                android:background="@color/item_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

            <!-- Разделитель -->
            <View
                android:id="@+id/divider_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="16dp"
                android:background="@color/content_divider" />

            <!-- Название короткого названия валюты -->
            <TextView
                android:id="@+id/currency_short_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currency_short_name_label"
                android:textColor="@color/item_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Поле ввода короткого названия валюты -->
            <EditText
                android:id="@+id/currency_short_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/currency_short_name_hint"
                android:textColor="@color/item_text"
                android:textColorHint="@color/item_hint"
                android:background="@color/item_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

            <!-- Разделитель -->
            <View
                android:id="@+id/divider_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="16dp"
                android:background="@color/content_divider" />

            <!-- Название обменного курса -->
            <TextView
                android:id="@+id/exchange_rate_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Обменный курс"
                android:textColor="@color/item_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Поле ввода обменного курса -->
            <EditText
                android:id="@+id/exchange_rate_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Обменный курс"
                android:textColor="@color/item_text"
                android:textColorHint="@color/item_hint"
                android:background="@color/item_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:singleLine="true" />

            <!-- Разделитель -->
            <View
                android:id="@+id/divider_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="16dp"
                android:background="@color/content_divider" />


        </LinearLayout>

    </LinearLayout>

    <!-- Боковое меню -->
    <com.google.android.material.navigation.NavigationView
        android:background="@color/content_background"
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_drawer_header"
        app:menu="@menu/nav_drawer_menu" 
        app:itemTextColor="@color/content_texts"
        app:itemIconTint="@color/content_icons"/>

</androidx.drawerlayout.widget.DrawerLayout> 