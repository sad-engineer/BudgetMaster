<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout 
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".budget.BudgetEditActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <!-- Тулбар -->
        <androidx.appcompat.widget.Toolbar 
            android:background="@color/toolbar_background"
            android:id="@+id/toolbar"
            android:layout_height="@dimen/toolbar_height"
            android:layout_marginTop="@dimen/toolbar_margin_top"
            android:layout_width="match_parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:title="">

            <include layout="@layout/toolbar_content_common" />

        </androidx.appcompat.widget.Toolbar>

        <!-- Контент -->
        <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/content_background"
            android:padding="16dp">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <!-- Сумма бюджета -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сумма бюджета"
                    android:textColor="@color/content_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Поле ввода суммы бюджета -->
                <EditText
                    android:id="@+id/budget_amount_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Введите сумму"
                    android:inputType="number"
                    android:background="@color/item_background"
                    android:textColor="@color/item_text"
                    android:textColorHint="@color/item_hint"
                    android:padding="12dp"
                    android:layout_marginBottom="24dp" />

                <!-- Разделитель -->
                <View
                    android:id="@+id/divider_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/content_divider" />

                <!-- Валюта -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Валюта"
                    android:textColor="@color/content_title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Поле ввода валюты -->
                <Spinner
                    android:id="@+id/budget_currency_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/item_background"
                    android:padding="12dp"
                    android:layout_marginBottom="24dp" />

                <!-- Разделитель -->
                <View
                    android:id="@+id/divider_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/content_divider" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Боковое меню -->
    <com.google.android.material.navigation.NavigationView 
        android:background="@color/content_background"
        android:id="@+id/nav_view"
        android:layout_height="match_parent"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_drawer_header"
        app:menu="@menu/nav_drawer_menu"
        app:itemTextColor="@color/content_texts"
        app:itemIconTint="@color/content_icons" />

</androidx.drawerlayout.widget.DrawerLayout>
