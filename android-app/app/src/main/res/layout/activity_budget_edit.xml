<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout 
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".budget.BudgetEditActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <!-- Тулбар -->
        <androidx.appcompat.widget.Toolbar 
            android:background="@color/accounts_toolbar_background"
            android:id="@+id/toolbar"
            android:layout_height="@dimen/toolbar_height"
            android:layout_marginTop="@dimen/toolbar_margin_top"
            android:layout_width="match_parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:title="">

            <LinearLayout 
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/menu_button_size"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/icon_back"
                    android:rotationX="2"
                    android:src="@drawable/ic_back"
                    app:tint="@color/accounts_toolbar_icons" />

                 <ImageButton
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/icon_menu"
                    android:id="@+id/menu_button"
                    android:layout_height="match_parent"
                    android:layout_width="@dimen/menu_button_size"
                    android:src="@drawable/ic_menu"
                    app:tint="@color/accounts_toolbar_icons" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/toolbar_title"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="Редактирование бюджета"
                    android:textColor="@color/accounts_toolbar_texts"
                    android:textSize="@dimen/toolbar_text"
                    android:textStyle="bold" />

                <ImageButton 
                    android:background="@android:color/transparent"
                    android:id="@+id/save_button"
                    android:layout_height="match_parent"
                    android:layout_width="@dimen/menu_button_size"
                    android:src="@drawable/ic_save"
                    app:tint="@color/accounts_toolbar_icons" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <!-- Контент -->
        <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/accounts_content_background"
            android:padding="16dp">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <!-- Сумма бюджета -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сумма бюджета"
                    android:textColor="@color/account_edit_titles"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/budget_amount_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Введите сумму"
                    android:inputType="number"
                    android:background="@color/account_edit_item_content_background"
                    android:textColor="@color/account_edit_item_content_texts"
                    android:textColorHint="@color/account_edit_item_content_hint"
                    android:padding="12dp"
                    android:layout_marginBottom="24dp" />

                <!-- Категория -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Категория"
                    android:textColor="@color/account_edit_titles"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/budget_category_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/account_edit_item_content_background"
                    android:padding="12dp"
                    android:layout_marginBottom="24dp" />

                <!-- Валюта -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Валюта"
                    android:textColor="@color/account_edit_titles"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/budget_currency_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/account_edit_item_content_background"
                    android:padding="12dp"
                    android:layout_marginBottom="24dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Боковое меню -->
    <com.google.android.material.navigation.NavigationView 
        android:background="@color/navigation_background"
        android:id="@+id/nav_view"
        android:layout_height="match_parent"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_drawer_header"
        app:menu="@menu/nav_drawer_menu"
        app:itemTextColor="@color/navigation_texts"
        app:itemIconTint="@color/navigation_icons" />

</androidx.drawerlayout.widget.DrawerLayout>
