<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout 
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".income.AddIncomeCategoryActivity">

    <LinearLayout 
        android:id="@+id/add_category_root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/add_category_content_background"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:layout_marginTop="@dimen/toolbar_margin_top"
            android:background="@color/add_category_toolbar_background"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:title="">

            <LinearLayout
                android:id="@+id/toolbar_container"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">

                <ImageButton
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/icon_back"
                    android:id="@+id/back_button"
                    android:layout_height="match_parent"
                    android:layout_width="@dimen/menu_button_size"
                    android:src="@drawable/ic_back"
                    app:tint="@color/add_category_toolbar_icons" />

                <ImageButton
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/icon_menu"
                    android:id="@+id/menu_button"
                    android:layout_height="match_parent"
                    android:layout_width="@dimen/menu_button_size"
                    android:src="@drawable/ic_menu"
                    app:tint="@color/add_category_toolbar_icons" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/toolbar_title_add_category"
                    android:textColor="@color/add_category_toolbar_texts"
                    android:textSize="@dimen/toolbar_text"
                    android:textStyle="bold" />

                <ImageButton
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/icon_save"
                    android:id="@+id/save_button"
                    android:layout_height="match_parent"
                    android:layout_width="@dimen/menu_button_size"
                    android:src="@drawable/ic_save"
                    app:tint="@color/add_category_toolbar_icons" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:id="@+id/add_category_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/add_category_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Название -->
                <TextView
                    android:id="@+id/add_category_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/add_category_name_label"
                    android:textColor="@color/add_category_content_texts"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/add_category_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/add_category_edit_text_background"
                    android:hint="@string/add_category_name_hint"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/add_category_content_texts"
                    android:textColorHint="@color/add_category_content_hint"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/add_category_divider_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/add_category_divider" />

                <!-- Тип -->
                <TextView
                    android:id="@+id/add_category_type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/add_category_type_label"
                    android:textColor="@color/add_category_content_texts"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/add_category_type_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/add_category_edit_text_background"
                    android:padding="12dp" />

                <View
                    android:id="@+id/add_category_divider_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/add_category_divider" />

                <!-- Родительская категория -->

                <TextView
                    android:id="@+id/add_category_parent_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/add_category_parent_label"
                    android:textColor="@color/add_category_content_texts"
                    android:textSize="16sp" />

                <Spinner
                    android:id="@+id/add_category_parent_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/add_category_edit_text_background"
                    android:padding="12dp" />

                <View
                    android:id="@+id/add_category_divider_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/add_category_divider" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView 
        android:background="@color/navigation_background"
        android:id="@+id/nav_view"
        android:layout_height="match_parent"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_drawer_header"
        app:menu="@menu/nav_drawer_menu"
        app:itemTextColor="@color/navigation_texts"
        app:itemIconTint="@color/navigation_icons" />

</androidx.drawerlayout.widget.DrawerLayout> 