<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout 
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".categories.ExpenseCategoriesActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <!-- Тулбар -->
        <androidx.appcompat.widget.Toolbar 
            android:background="@color/authors_toolbar_background"
            android:id="@+id/toolbar"
            android:layout_height="@dimen/toolbar_height"
            android:layout_marginTop="@dimen/toolbar_margin_top"
            android:layout_width="match_parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:title="">

            <LinearLayout 
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/menu_button_size"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/icon_back"
                    android:rotationX="2"
                    android:src="@drawable/ic_back"
                    app:tint="@color/authors_toolbar_icons" />

                 <ImageButton
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/icon_menu"
                    android:id="@+id/menu_button"
                    android:layout_height="match_parent"
                    android:layout_width="@dimen/menu_button_size"
                    android:src="@drawable/ic_menu"
                    app:tint="@color/authors_toolbar_icons" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/toolbar_title"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="@string/menu_expense_categories"
                    android:textColor="@color/authors_toolbar_texts"
                    android:textSize="@dimen/toolbar_text"
                    android:textStyle="bold" />

                <ImageButton 
                    android:background="@android:color/transparent"
                    android:id="@+id/empty_expense_categories_button_1"
                    android:layout_height="match_parent"
                    android:layout_width="@dimen/menu_button_size"
                    android:visibility="invisible" />

                <ImageButton 
                    android:background="@android:color/transparent"
                    android:id="@+id/empty_expense_categories_button_2"
                    android:layout_height="match_parent"
                    android:layout_width="@dimen/menu_button_size"
                    android:visibility="invisible" />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <!-- Контент -->
        <FrameLayout 
            android:background="@color/authors_content_background"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <ScrollView
                android:id="@+id/expense_categories_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/expense_categories_content_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <!-- Заголовок -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Категории расходов"
                        android:textColor="@color/authors_titles"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <!-- Описание -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Здесь будут отображаться категории расходов."
                        android:textColor="@color/authors_texts"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </ScrollView>

        </FrameLayout>

    </LinearLayout>

    <!-- Боковое меню -->
    <com.google.android.material.navigation.NavigationView 
        android:background="@color/navigation_background"
        android:id="@+id/nav_view"
        android:layout_height="match_parent"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_drawer_header"
        app:menu="@menu/nav_drawer_menu"
        app:itemTextColor="@color/navigation_texts"
        app:itemIconTint="@color/navigation_icons" />

</androidx.drawerlayout.widget.DrawerLayout> 