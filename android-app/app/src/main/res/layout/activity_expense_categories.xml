<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout 
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".categories.ExpenseCategoriesActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <!-- Тулбар -->
        <androidx.appcompat.widget.Toolbar 
            android:background="@color/categories_toolbar_background"
            android:id="@+id/toolbar2"
            android:layout_height="@dimen/toolbar_height"
            android:layout_marginTop="@dimen/toolbar_margin_top"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:title="">

            <LinearLayout 
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/menu_button_size"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/icon_back"
                    android:rotationX="2"
                    android:src="@drawable/ic_back"
                    app:tint="@color/categories_toolbar_icons" />

                 <ImageButton
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/icon_menu"
                    android:id="@+id/menu_button"
                    android:layout_height="match_parent"
                    android:layout_width="@dimen/menu_button_size"
                    android:src="@drawable/ic_menu"
                    app:tint="@color/categories_toolbar_icons" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/toolbar_title"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="@string/menu_expense_categories"
                    android:textColor="@color/categories_toolbar_texts"
                    android:textSize="@dimen/toolbar_text"
                    android:textStyle="bold" />

                <!-- Пустое место (резерв на будущее) -->
                <View
                    android:layout_width="@dimen/menu_button_size"
                    android:layout_height="match_parent" />

                <ImageButton 
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/icon_position_change"
                    android:id="@+id/position_change_button"
                    android:layout_height="match_parent"
                    android:layout_width="@dimen/menu_button_size"
                    android:src="@drawable/ic_position_change"
                    app:tint="@color/categories_toolbar_icons" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <!-- Контент -->
        <FrameLayout 
            android:background="@color/categories_content_background"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar2">

            <!-- RecyclerView для списка категорий -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/expense_categories_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:clipToPadding="false" />

            <!-- Кнопки создания и удаления категорий внизу справа -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_gravity="bottom|end">

                <!-- Кнопка удаления (меньше) -->
                <ImageButton
                    android:id="@+id/delete_category_button_bottom"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/version_item_background"
                    android:contentDescription="@string/icon_delete_category"
                    android:src="@drawable/ic_delete"
                    app:tint="@color/categories_toolbar_icons" />

                <!-- Кнопка создания (больше) -->
                <ImageButton
                    android:id="@+id/add_category_button_bottom"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:background="@drawable/version_item_background"
                    android:contentDescription="@string/icon_add_category"
                    android:src="@drawable/ic_add"
                    app:tint="@color/categories_toolbar_icons" />

            </LinearLayout>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Боковое меню -->
    <com.google.android.material.navigation.NavigationView 
        android:background="@color/navigation_background"
        android:id="@+id/nav_view"
        android:layout_height="match_parent"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_drawer_header"
        app:menu="@menu/nav_drawer_menu"
        app:itemTextColor="@color/navigation_texts"
        app:itemIconTint="@color/navigation_icons" />

</androidx.drawerlayout.widget.DrawerLayout> 