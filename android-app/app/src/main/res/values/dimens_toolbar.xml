<resources>
    <!-- Высота тулбара (action bar) -->
    <dimen name="toolbar_height">60dp</dimen>
    <!-- Отступ тулбара сверху относительно status bar -->
    <dimen name="toolbar_margin_top">0dp</dimen>
    <!-- Размер меню-кнопки -->
    <dimen name="menu_button_size">48dp</dimen>
    <!-- Размер текста в тулбаре -->
    <dimen name="toolbar_text">28sp</dimen>
    <!-- Размер доход-кнопки -->
    <dimen name="income_button_size">48dp</dimen>
    <!-- Размер расход-кнопки -->
    <dimen name="expense_button_size">48dp</dimen>
    <!-- Размер отступа между элементами тулбара -->
    <dimen name="toolbar_gap">0dp</dimen>



    <!-- Размеры для валют-->
    <dimen name="toolbar_text_currencies">@dimen/toolbar_text</dimen>
    <dimen name="toolbar_text_currencies_edit">21sp</dimen>
    <dimen name="toolbar_text_currencies_add">@dimen/toolbar_text</dimen>
    
    <!-- Размеры для счетов-->
    <dimen name="toolbar_text_accounts">21sp</dimen>
    <dimen name="toolbar_text_account_edit">21sp</dimen>
    <dimen name="toolbar_text_account_add">@dimen/toolbar_text</dimen>
    
    <!-- Размеры для бюджетов-->
    <dimen name="toolbar_text_budgets">@dimen/toolbar_text</dimen>
    <dimen name="toolbar_text_budget_edit">21sp</dimen>
    <dimen name="toolbar_text_budget_add">@dimen/toolbar_text</dimen>
    

</resources> 